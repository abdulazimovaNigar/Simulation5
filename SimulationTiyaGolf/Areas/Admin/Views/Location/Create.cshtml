@model Location
<div class="container">
	<div class="row">
        <form method="post">
            <div class="form-group">
                <label asp-for="Country">Country</label>
                <input asp-for="Country" placeholder="Enter country name">
                <span asp-validation-for="Country"></span>
            </div>
            <div class="form-group">
                <label asp-for="City">City</label>
                <input asp-for="City" placeholder="Enter city name">
                <span asp-validation-for="City"></span>
            </div>
            <button type="submit" class="btn btn-primary" asp-action="Create">Create</button>
        </form>
	</div>
</div>